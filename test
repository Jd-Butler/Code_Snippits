let
    Source = Table.FromRecords({
        [YourColumn = "2023-08-31This is some text that goes on for a while"],
        [YourColumn = "NotADateThis is some text that also goes on for a while"]
    }),

    // Add a new column to check if the first 10 characters form a date
    WithDateCheck = Table.AddColumn(Source, "IsDate", each try Date.From(Text.Start([YourColumn], 10)) otherwise null),

    // Add another new column to store the split values
    WithSplits = Table.AddColumn(WithDateCheck, "SplitValues", each 
        if [IsDate] = null then
            Table.FromList(Splitter.SplitTextByPositions({0, 50, 120})([YourColumn]), Splitter.SplitByNothing(), {"C"}, null, ExtraValues.Error)
        else
            Table.FromList(Splitter.SplitTextByPositions({0, 12, 156, 190})([YourColumn]), Splitter.SplitByNothing(), {"A", "B", "C"}, null, ExtraValues.Error)
    ),

    // Expand the new column into multiple columns
    ExpandedSplits = Table.ExpandTableColumn(WithSplits, "SplitValues", {"A", "B", "C"}, {"A", "B", "C"}),

    // Optional: Remove the IsDate and original columns
    FinalTable = Table.RemoveColumns(ExpandedSplits, {"IsDate", "YourColumn"})
in
    FinalTable
