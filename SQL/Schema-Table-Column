SELECT DISTINCT
  COL.OWNER AS SCHEMA_NAME,
  COL.TABLE_NAME,
  COL.COLUMN_NAME,
  COL.COLUMN_ID,
  COL.DATA_TYPE,
  COL.DATA_LENGTH,
  COL.NULLABLE,
  ALL_COL.COMMENTS
FROM SYS.ALL_TAB_COLUMNS COL
INNER JOIN SYS.ALL_TABLES T ON COL.OWNER = T.OWNER AND COL.TABLE_NAME = T.TABLE_NAME
LEFT JOIN SYS.ALL_COL_COMMENTS ALL_COL ON COL.TABLE_NAME = ALL_COL.TABLE_NAME AND COL.COLUMN_NAME = ALL_COL.COLUMN_NAME
ORDER BY COL.OWNER, COL.TABLE_NAME, COL.COLUMN_ID
